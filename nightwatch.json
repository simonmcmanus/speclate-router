{
  "src_folders" : ["tests"],
  "output_folder" : "test-reports",
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "globals_path" : "",

  "selenium" : {
    "start_process" : true,
    "server_path" : "./selenium-server-standalone-2.44.0.jar",
    "log_path" : "tests/e2e/logs",
    "port" : 4444,
    "host": "localhost",
    "cli_args" : {

      "webdriver.chrome.driver" : "tests/selenium/chromedriver",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost:3000",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "pathname": "/wd/hub",
      "silent" : true,
      "disable_colors": false,
      "firefox_profile" : false,
      "screenshots" : {
        "enabled" : false,
        "path" : ""
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
